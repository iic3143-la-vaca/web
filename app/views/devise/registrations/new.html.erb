<div class="row">
  <div class="col-md-6 col-sm-8 col-xs-12 col-centered">
    <div class="x_panel tile">
      <div class="x_title">
        <h2>Sign up</h2>
        <div class="clearfix"></div>
      </div>
      <p class="x_content">
        <%= form_for(resource,
                     as: resource_name,
                     url: registration_path(resource_name),
                     :html => {:class => 'form-horizontal form-label-left input_mask'}) do |f| %>
            <div class="field">
              <%= f.label :name, class: "col-md-12 col-sm-12 col-xs-12" %><br />
              <div class="col-md-12 col-sm-12 col-xs-12">
                <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form-control", placeholder: "Name" %>
              </div>
            </div>
            <div class="field">
              <%= f.label :email, class: "col-md-12 col-sm-12 col-xs-12", style:"padding-top: 20px;" %><br />
              <div class="col-md-12 col-sm-12 col-xs-12">
                <%= f.email_field :email, autocomplete: "email", class:"form-control", placeholder: "Email" %>
              </div>
            </div>
            <div class="field">
              <%= f.label :password, class: "col-md-12 col-sm-12 col-xs-12", style:"padding-top: 20px;" %><br />
              <div class="col-md-12 col-sm-12 col-xs-12">
                <%= f.password_field :password, autocomplete: "off", class:"form-control", placeholder: "Password" %>
              </div>
            </div>

            <div class="field">
              <%= f.label :password_confirmation, class: "col-md-12 col-sm-12 col-xs-12", style:"padding-top: 20px;" %><br />
              <div class="col-md-12 col-sm-12 col-xs-12">
                <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control", placeholder: "Password" %>
              </div>
            </div>

            <div class="clearfix"></div>

            <p class="actions" style="text-align: left; padding-top: 20px; padding-left: 15px;">
                <%= f.submit "Sign up", class:"btn btn-default", style:"text-align: center;"%>
            </p>

        <% end %>
        </p>
      </div>
    </div>
  </div>


  <div class="col-md-6 col-sm-8 col-xs-12 col-centered">
    <div class="x_panel tile">
      <div class="x_title">
        <h2>Already a member?</h2>
        <div class="clearfix"></div>
      </div>
      <div class="x_content">
        <p style="text-align: center;">
          <%= render "devise/shared/links" %>
        </p>
      </div>
    </div>
  </div>

</div>