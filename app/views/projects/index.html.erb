<h2>Our projects</h2>
<div class="row">
  <% @projects.each do |proyect| %>
      <div class="col-md-3 col-sm-4 col-xs-12">
        <div class="x_panel tile">
          <div class="x_title">
            <h2><%= link_to proyect.title, projects_path(id: proyect.id) %></h2>
            <div class="clearfix"></div>
          </div>
          <div class="x_content">
            <div id="vaca_img">
              <%= image_tag "vaca.jpg" %>
            </div>
            <br>
            <table class="contact_list">
              <tbody>
              <tr>
                <td> tags </td>
              </tr>
              <tr>
                <td>Goal: <%= number_to_currency(proyect.goal) %></td>
                <td class="text-right">J-5</td>
              </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
  <% end %>
</div>